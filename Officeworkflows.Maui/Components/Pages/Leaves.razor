@page "/leaves"
@inject Officeworkflows.Maui.Services.LeaveService LeaveService

<style>
    .page-wrapper {
        padding: 16px;
        background-color: #f3f2f1;
        /* FIXED: removed top & bottom margin */
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .page-title {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 16px;
        color: #323130;
    }

    .leave-card {
        background: white;
        border: 1px solid #d2d0ce;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 1.6px 3.6px rgba(0,0,0,0.13);
        margin-bottom: 16px;
    }

    .leave-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 16px;
    }

    .label {
        color: #605e5c;
    }

    .value {
        font-weight: bold;
        color: #323130;
    }

    .apply-btn {
        width: 100%;
        background-color: #0078d4;
        color: white;
        border: none;
        padding: 14px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        margin-top: 20px;
    }

    .back-btn {
        background-color: #0078d4;
        color: white;
        border: none;
        padding: 8px 14px;
        font-size: 16px;
        border-radius: 8px;
        margin-bottom: 12px;
        cursor: pointer;
    }
</style>

<div class="page-wrapper">

    <div class="page-title">
        Leaves Management
    </div>

    <button class="back-btn" @onclick="GoBack">Back</button>
    <button class="back-btn" @onclick="Addleave">Apply Leave</button>

    <div class="leave-card">
        <div class="leave-row">
            <span class="label">Total Leaves:</span>
            <span class="value">@TotalLeaves</span>
        </div>
        <div class="leave-row">
            <span class="label">Used Leaves:</span>
            <span class="value">@UsedLeaves</span>
        </div>
        <div class="leave-row">
            <span class="label">Available Leaves:</span>
            <span class="value">@AvailableLeaves</span>
        </div>
    </div>

    <h4 style="margin: 10px 0; color:#323130;">Leave History</h4>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="error">@ErrorMessage</div>
    }
    else
    {
        @foreach (var leave in LeaveHistory)
        {
            <div class="leave-card">
                <div class="leave-row">
                    <span class="label">From:</span>
                    <span class="value">@leave.FromDate.ToString("dd MMM yyyy")</span>
                </div>
                <div class="leave-row">
                    <span class="label">To:</span>
                    <span class="value">@leave.ToDate.ToString("dd MMM yyyy")</span>
                </div>
                <div class="leave-row">
                    <span class="label">Type:</span>
                    <span class="value">@leave.LeaveType</span>
                </div>
                <div class="leave-row">
                    <span class="label">Status:</span>
                    <span class="value" style="color:@(leave.Status == "Approved" ? "green" : leave.Status == "Pending" ? "#d47f00" : "red")">
                        @leave.Status
                    </span>
                </div>
            </div>
        }
    }
</div>

