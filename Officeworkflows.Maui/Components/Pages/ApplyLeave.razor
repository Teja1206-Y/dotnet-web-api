@page "/applyleave"

<style>
    .page-wrapper {
        padding: 16px;
        background-color: #f3f2f1;
        /* ❌ Removed margins that caused overlap */
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .page-title {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 12px;
        color: #0078d4;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-container {
        background: white;
        padding: 22px;
        border-radius: 10px;
        border: 1px solid #d2d0ce;
        box-shadow: 0 1.6px 3.6px rgba(0,0,0,0.12);
    }

    .form-group {
        margin-bottom: 14px;
    }

    .input {
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #d2d0ce;
        font-size: 14px;
    }

    .btn {
        width: 100%;
        padding: 14px;
        background-color: #0078d4;
        color: white;
        border: none;
        font-weight: bold;
        cursor: pointer;
        border-radius: 8px;
        margin-top: 10px;
    }

        .btn:disabled {
            background: #b4b4b4;
        }

    .back-btn {
        background-color: #0078d4;
        color: white;
        border: none;
        padding: 8px 16px;
        font-size: 16px;
        border-radius: 8px;
        margin-bottom: 16px;
        cursor: pointer;
    }

    .message {
        padding: 12px;
        margin-top: 12px;
        border-left: 4px solid;
    }

    .success {
        background: #e6ffea;
        color: green;
        border-color: green;
    }

    .error {
        background: #ffeaea;
        color: red;
        border-color: red;
    }
</style>

<div class="page-wrapper">

    <div class="page-title">
        <i class="fas fa-calendar-check"></i>
        Apply Leave
    </div>

    <button class="back-btn" @onclick="GoBack">> Back</button>

    <div class="form-container">

        <EditForm Model="@Leave" OnValidSubmit="ApplyLeaveHandler">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label>Leave Type</label>
                <InputSelect @bind-Value="Leave.LeaveType" class="input">
                    <option value="">Select Leave Type</option>
                    <option value="Casual">Casual Leave</option>
                    <option value="Sick">Sick Leave</option>
                    <option value="Earned">Earned Leave</option>
                    <option value="Unpaid">Unpaid Leave</option>
                </InputSelect>
                <ValidationMessage For="@(() => Leave.LeaveType)" />
            </div>

            <div class="form-group">
                <label>From Date</label>
                <InputDate @bind-Value="Leave.FromDate" class="input" />
                <ValidationMessage For="@(() => Leave.FromDate)" />
            </div>

            <div class="form-group">
                <label>To Date</label>
                <InputDate @bind-Value="Leave.ToDate" class="input" />
                <ValidationMessage For="@(() => Leave.ToDate)" />
            </div>

            <div class="form-group">
                <label>Reason</label>
                <InputTextArea @bind-Value="Leave.Reason" class="input" />
                <ValidationMessage For="@(() => Leave.Reason)" />
            </div>

            <button type="submit" class="btn" disabled="@isLoading">
                @(isLoading ? "Submitting..." : "Apply Leave")
            </button>
        </EditForm>

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="message @(Message.Contains("Success") ? "success" : "error")">
                @Message
            </div>
        }
    </div>
</div>
