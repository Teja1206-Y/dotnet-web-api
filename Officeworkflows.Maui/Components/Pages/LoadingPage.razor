@using Syncfusion.Blazor.Spinner

<div class="loading-page">
    <div class="loading-box">
        <SfSpinner Visible="true" CssClass="spinner-center"></SfSpinner>
        <p>@Message</p>
    </div>
</div>


<style>
    .loading-page {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .loading-box {
        text-align: center;
        padding: 40px;
        background: white;
        border: 1px solid #d2d0ce;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
    }

    .loading-box p {
        margin-top: 15px;
        font-size: 16px;
        font-weight: 600;
        color: #0078d4;
    }
</style>
